{
  "expo": {
    "name": "Padel Highlights",
    "slug": "padel-highlights",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "padel",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0E27"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "pl.maciejsienkiewicz.padel",
      "infoPlist": {
        "NSCameraUsageDescription": "Potrzebujemy dostępu do kamery, aby nagrywać akcje i skanować kod QR",
        "NSMicrophoneUsageDescription": "Potrzebujemy dostępu do mikrofonu, aby nagrywać dźwięk",
        "NSPhotoLibraryUsageDescription": "Potrzebujemy dostępu do galerii, aby zapisywać nagrania",
        "NSPhotoLibraryAddUsageDescription": "Potrzebujemy dostępu do galerii, aby zapisywać nagrania"
      },
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0A0E27"
      },
      "package": "com.padel",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.VIBRATE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "./plugins/video-merger",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "Potrzebujemy dostępu do kamery, aby nagrywać akcje i skanować kod QR",
          "enableCodeScanner": false
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Potrzebujemy dostępu do galerii, aby zapisywać nagrania",
          "savePhotosPermission": "Potrzebujemy dostępu do galerii, aby zapisywać nagrania",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ]
  }
}